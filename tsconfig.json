{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "#rails": [
        "src/index.mjs"
      ],
      "#rails/rails": [
        "src/rails/index.mjs"
      ]
    }
  },
  "include": [
    ".",
    "src/**/*"
  ],
  "exclude": [
    "test"
  ]
}
